<div class="form-container">
  <%= form_with model: article, local: true do |form| %>
    
    <div>
      <%= form.label :title, class: "form-label" %><br>
      <%= form.text_field :title, class: "form-input" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="form-error"><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :body, class: "form-label" %><br>
      <%= form.text_area :body, class: "form-textarea" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="form-error"><%= message %></div>
      <% end %>
    </div>

<div class="form-group">
  <%= form.label :status, class: "form-label" %>
  <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public', prompt: 'Select Status' }, class: "form-select fantasy-select" %>
</div>



    <div>
      <%= form.submit "Save Article", class: "form-submit" %>
    </div>

  <% end %>
</div>
