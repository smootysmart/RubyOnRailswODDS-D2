<%= form_with model: [ article, article.comments.build ], class: "comment-form" do |form| %>
  <div class="form-group">
    <%= form.label :commenter, "Your Name", class: "form-label" %><br>
    <%= form.text_field :commenter, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Comment", class: "form-label" %><br>
    <%= form.text_area :body, class: "form-textarea" %>
  </div>

<div class="form-group">
  <%= form.label :status, class: "form-label" %>
  <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public', prompt: 'Select Status' }, class: "form-select fantasy-select" %>
</div>

  <div class="form-group">
    <%= form.submit "Add Comment", class: "form-submit-btn" %>
  </div>
<% end %>
